<table class="table">

      <div class="dropdown pull-right">
        <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          排序
          <b class="caret"></b>
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to("按薪资下限排序",jobs_path(:order => "by_lower_bound"))%></li>
          <li><%= link_to("按薪资上限排序",jobs_path(:order => "by_upper_bound"))%></li>
          <li><%= link_to("按发表时间排序",jobs_path)%></li>
        </ul>
      </div>


  <thead>
    <th>职缺</th>
    <th>薪资下限</th>
    <th>薪资上限</th>
    <th>发布时间</th>
  </thead>

  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td><%= job.wage_lower_bound %></td>
    <td><%= job.wage_upper_bound %></td>
    <td><%= job.created_at %></td>
  </tr>
  <% end %>
</table>
